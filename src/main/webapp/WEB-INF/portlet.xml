<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
    version="2.0">

    <portlet>
        <portlet-name>CollaborateUltraPortlet</portlet-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
        <init-param>
            <name>contextConfigLocation</name>
            <value>/WEB-INF/context/portlet/CollaborateUltraPortlet-portlet.xml</value>
        </init-param>
        <!-- This value is to 0 in dev, can set to cache at a positive value in seconds 
            for caching, or -1 to never expire cache -->
        <expiration-cache>60</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <portlet-mode>edit</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>
        <resource-bundle>messages</resource-bundle>
        <portlet-info>
            <title>CollaborateUltraPortlet Portlet</title>
        </portlet-info>
        <portlet-preferences>
            <!-- The attribute to check for basic or full access.
                 Attribute must be available below-->
            <preference>
                <name>userTypeAttribute</name>
                <value>eduPersonAffiliation</value>
            </preference>
            <!-- The values of the above attribute which will grant full access
                 If the attribute or value isn't found then the portlet will
                 default to basic access
            -->
            <preference>
                <name>fullAccessValues</name>
                <value>staff</value>
            </preference>
            <!-- Role which grants admin access. Role must be available below-->
            <preference>
                <name>adminRole</name>
                <value>Collaborate Administrators</value>
            </preference>
        </portlet-preferences>
        <security-role-ref>
            <role-name>Collaborate Administrators</role-name>
            <role-link>Collaborate Administrators</role-link>
        </security-role-ref>
    </portlet>
    <user-attribute>
        <name>eduPersonAffiliation</name>
    </user-attribute>
    <user-attribute>
        <name>eduPersonOrgUnitDN</name>
    </user-attribute>
    <user-attribute>
        <name>displayName</name>
    </user-attribute>
    <user-attribute>
        <name>uid</name>
    </user-attribute>
    <user-attribute>
        <name>mail</name>
    </user-attribute>
    <user-attribute>
        <name>cn</name>
    </user-attribute>

</portlet-app>
